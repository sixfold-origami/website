{
	"plugins": ["prettier"],
	"extends": ["eslint:recommended", "next/core-web-vitals", "plugin:jsx-a11y/recommended", "prettier"],
	"rules": {
		"indent": ["error", "tab"],
		"quotes": [2, "single", { "avoidEscape": true }],
		"semi": ["error", "always"],
		"no-mixed-spaces-and-tabs": "error",
		"object-curly-spacing": ["error", "always"],
		"space-infix-ops": "error",
		"comma-dangle": ["error", "always-multiline"],
		"no-redeclare": ["error"],
		"no-unused-vars": ["warn"],
		"prettier/prettier": 1
	}
}
